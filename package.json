{
  "name": "technologymonastery.org",
  "version": "1.0.0",
  "description": "Static nonprofit website for The Technology Monastery - Empowering nonprofits through technology",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "validate": "html5validator --root . --ignore-re 'Attribute \".*\" not allowed'",
    "lint:css": "stylelint 'css/**/*.css'",
    "lint:js": "eslint 'js/**/*.js'",
    "lint": "npm run lint:css && npm run lint:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FreeForCharity/Technologymonastery.org.git"
  },
  "keywords": [
    "nonprofit",
    "technology",
    "charity",
    "static-site",
    "github-pages"
  ],
  "author": "The Technology Monastery",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/FreeForCharity/Technologymonastery.org/issues"
  },
  "homepage": "https://freeforcharity.github.io/Technologymonastery.org",
  "devDependencies": {
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.0.0"
  }
}
